{
  "name": "medifinder-backend",
  "version": "1.0.0",
  "description": "Backend for Medifinder (Node/Express/Mongo)",
  "main": "server.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test mocha \"test/**/*.{test,spec}.js\" --require test/test-setup.js --timeout 20000 --exit",
    "coverage": "cross-env NODE_ENV=test nyc mocha -r test/test-setup.js \"test/**/*.{test,spec}.js\" --timeout 20000 --exit",
    "test:report": "cross-env NODE_ENV=test mocha \"test/**/*.{test,spec}.js\" --require test/test-setup.js --timeout 20000 --exit --reporter mochawesome --reporter-option reportDir=mochawesome-report,reportFilename=mochawesome,inlineAssets=true,quiet=true",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "node server.js"
  },
  "nyc": {
    "reporter": [
      "text",
      "lcov",
      "html"
    ],
    "exclude": [
      "test/**",
      "server.js"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "medifinder": "file:..",
    "mongoose": "^8.6.0"
  },
  "devDependencies": {
    "chai": "^5.3.3",
    "cross-env": "^10.1.0",
    "mocha": "^11.7.4",
    "mochawesome": "^7.1.4",
    "mongodb-memory-server": "^10.2.1",
    "nodemon": "^3.1.4",
    "nyc": "^17.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^19.0.5",
    "sinon-chai": "^4.0.1",
    "supertest": "^7.1.4"
  },
  "author": "Medifinder Team",
  "license": "ISC"
}
